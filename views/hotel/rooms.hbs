        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">All Room</h2>
                </div>
                 <div>
                    {{!-- <p>hotelId {{hotel.hotelId}}</p> --}}

                    <a href="/hotel/addrooms" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Add Room</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    {{!-- <th>#ID</th> --}}
                                    <th scope="col">Room No</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Room Type</th>
                                    {{!-- <th scope="col">Price</th> --}}
                                    {{!-- <th scope="col">Status</th> --}}
                                    <th scope="col">Capacity</th> 
                                     <th scope="col">Price</th>

                                            <th scope="col" style="padding-left:40px">Action </th>
                                </tr>
                            </thead>
                            <tbody>

                                {{#each viewdata}}
                                <tr>                                    
                                    <td><b>{{this.Roomnumber}}</b></td>
                                    <td>
                                        <img style="width: 50px; height:50px" src="/images/sign-images/{{this.Image}}" alt="">
                                    </td>
                                    <td><span class="badge rounded-pill alert-warning">{{this.RoomType}}</span></td>
                                    
                                    <td>{{this.Capacity}}</td>
                                    <td>{{this.Price}}</td>
                                    <td>
                                    <form action="/hotel/edit/{{this._id}}" method="get" style="display:inline;">
                                    <button
                                        type="submit"
                                        class="btn btn-success"
                                        data-toggle="modal"
                                        data-target="#exampleModalCenter"
                                    >
                                        Edit
                                    </button>
                                    </form>
                                    
                                    <form action="/hotel/delete/{{this._id}}" method="post" style="display:inline;">
                                    <button
                                        type="submit"
                                        class="btn btn-danger"
                                        data-toggle="modal"
                                        data-target="#exampleModalCenter"
                                    >
                                        Delete
                                    </button>
                                    </form>
                                    </td>
                                </tr>

                                {{/each}}
                                
                            </tbody>
                        </table>
                    </div> 
                </div> 
